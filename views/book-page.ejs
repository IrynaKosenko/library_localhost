<%- include('./partials/head'); %>

    <body data-gr-c-s-loaded="true" class="">

        <%- include('./partials/header.ejs'); %>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="margin: 20px;">
                <button id="adminBtn" class="btn btn-success"
                    onclick="location.href ='<%= host%>/admin/'">ADMIN</button>
            </div>
            <section id="main" class="main-wrapper">
                <div class="container">
                    <% if(search){ %>
                        <p>
                            Found
                            <span style="color: rgb(53, 173, 42);">
                                <%= totalBooks %>
                            </span>
                            book(books) in your search
                            <span style="color: rgb(53, 173, 42);">"<%= search %>"</span>
                        </p>
                        <% }%>
                            <div id="content" class="book_block col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div id="<%= book[0].id %>" book-id="<%= book[0].id %>">
                                    <div id="bookImg" class="col-xs-12 col-sm-3 col-md-3 item" style="margin: 0"><img
                                            src="<%= host%>/images/<%= book[0].image %>" alt="Responsive image"
                                            class="img-responsive">
                                        <hr>
                                    </div>
                                    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 info">

                                        <div class="bookInfo col-md-12">
                                            <div id="title" class="titleBook">
                                                <%= book[0].title %>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <div class="bookLastInfo">
                                                <div class="bookRow"><span class="properties">автор:</span><span
                                                        id="author">
                                                        <%= book[0].authorsNames %>
                                                    </span></div>
                                                <div class="bookRow"><span class="properties">год:</span><span
                                                        id="year"></span>
                                                    <%= book[0].year_book %>
                                                        </span>
                                                </div>
                                                <div class="bookRow"><span class="properties">страниц:</span><span
                                                        id="pages">
                                                        <%= book[0].pages %>
                                                    </span>
                                                </div>
                                                <div class="bookRow"><span class="properties">isbn:</span><span
                                                        id="isbn">
                                                        <%= book[0].isbn %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="btnBlock col-xs-12 col-sm-12 col-md-12">
                                            <button type="button" class="btn btn-success" id="btn-clicks-wanted"
                                                onclick="clicksWanted('<%= book[0].id %>')">Хочу читати</button>
                                        </div>
                                        <div class="bookDescription col-xs-12 col-sm-12 col-md-12 hidden-xs hidden-sm">
                                            <h4>Про книгу</h4>
                                            <hr>
                                            <p id="description">
                                                <%= book[0].description %>
                                            </p>
                                            <button class="description_button">
                                                <span>Показати більше</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="bookDescription col-xs-12 col-sm-12 col-md-12 hidden-md hidden-lg">
                                        <h4>Про книгу</h4>
                                        <hr>
                                        <p class="description">
                                            <%= book[0].description %>
                                        </p>
                                    </div>
                                </div>

                                <!---------- Modal ----------->
                                <div id="modal-window" class="modal-window">
                                    <div class="modal-body">
                                        <div class="modal-cont">
                                            <div class="modal-title">
                                                <h3>Супер!</h3>
                                            </div>
                                            <div class="modal-text">
                                                Книга вільна і ти можеш прийти за нею!
                                                Наша адреса: місто Кропивницький, провулок Василівский 10, 5 поверх.
                                                Краще попередньо подзвонити та попередити нас, щоб не втрапити в
                                                незручну
                                                ситуацію.
                                                Тел. 099 196 24 69
                                            </div>
                                            <div class="d-grid gap-2 d-md-flex justify-content-md-end"
                                                style="margin-top: 15px;">
                                                <button type="button" class="btn btn-primary"
                                                    onclick="closeModal()">Зрозуміло</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="overlay" id="overlay-modal"></div>
                            </div>
                </div>
            </section>

